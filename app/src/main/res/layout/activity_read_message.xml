<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mes_exemple.ReadMessageActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/all_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="all"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inbox_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="Inbox"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/outbox_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="Outbox"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/draft_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="draft"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sent_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="sent sms"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="mobile money"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/orange_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="orange money"/>

    </LinearLayout>

    <ListView
            android:id="@+id/sms_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

    </ListView>

</LinearLayout>