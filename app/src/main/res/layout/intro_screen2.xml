<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:background="@color/fui_linkColor">

    <TextView
            android:text="Comptabiliser vos entrées-sorties de votre compte mobile  n'a jamais été aussi simple"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:fontFamily="@font/amita_bold"
            android:id="@+id/textView"
/>
    <ImageView
            android:layout_width="327dp"
            android:layout_height="153dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ilustration_statistiques"
            android:id="@+id/imageView"/>
    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Statistiques de vos transactions"
            android:textSize="30dp"


    />
</LinearLayout>