<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cardView_item_person"
android:layout_width="match_parent"
android:layout_height="70dp"
android:layout_margin="4dp"
android:foreground="?android:attr/selectableItemBackground"
app:cardBackgroundColor="@android:color/white"
android:clickable="true"
android:focusable="true"
app:cardCornerRadius="4dp"
app:cardElevation="4dp">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/id_chekbox"
            android:layout_width="30dp"
            android:layout_marginStart="10dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"/>

    <ImageView
            android:id="@+id/id_silple_user_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            tools:src="@drawable/nom_user"/>

    <TextView
            android:id="@+id/id_simple_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/id_silple_user_image_view"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            tools:text="User name"/>

    <TextView
            android:id="@+id/id_simple_user_item_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_simple_user_username"
            android:layout_below="@+id/id_simple_user_username"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="User phone number"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>