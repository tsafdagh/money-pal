<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView_item_person"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imageView_profile_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_circle_grey"/>

        <TextView
                android:id="@+id/id_text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageView_profile_picture"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                tools:text="Transfer Ã "/>

        <TextView
                android:id="@+id/id_textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/id_text_view_name"
                android:layout_below="@+id/id_text_view_name"
                android:layout_marginStart="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="Samedi 9"
                android:layout_marginTop="5dp"/>
        <TextView
                android:text="-35 400"
                android:layout_width="146dp"
                android:layout_height="38dp"
                android:id="@+id/id_tv_montant"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="36dp"
                android:layout_alignParentTop="true"
                android:textColor="#FF5722"
                android:layout_alignParentStart="true"
                android:layout_marginStart="246dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>